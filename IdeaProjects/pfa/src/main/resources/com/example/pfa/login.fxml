<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.Reflection?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="664.0" prefWidth="876.0" style="-fx-background-color: #F2F2F2;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.pfa.LoginController">
   <!-- Login Button -->
   <Button alignment="CENTER" blendMode="DARKEN" contentDisplay="CENTER" layoutX="677.0" layoutY="526.0" mnemonicParsing="false"  prefHeight="38.0" prefWidth="146.0" style="-fx-background-radius: 15; -fx-background-color: #4E342E; -fx-border-radius: 15; -fx-padding: 10 20; -fx-text-fill: #FFFFFF;" text="Login" textOverrun="WORD_ELLIPSIS">
      <effect>
         <Reflection />
      </effect>
      <font>
         <Font name="Poppins" size="14.0" />
      </font>
   </Button>

   <!-- Forget Password Button -->
   <Button alignment="CENTER" blendMode="DARKEN" contentDisplay="CENTER" layoutX="78.0" layoutY="561.0" mnemonicParsing="false" prefHeight="38.0" prefWidth="146.0" style="-fx-background-radius: 15; -fx-background-color: #4E342E; -fx-border-radius: 15; -fx-padding: 10 20; -fx-text-fill: #FFFFFF;" text="Forget Password" textOverrun="WORD_ELLIPSIS">
      <effect>
         <Reflection />
      </effect>
      <font>
         <Font name="Poppins" size="14.0" />
      </font>
   </Button>

   <!-- Input Fields Area -->
   <AnchorPane layoutX="219.0" layoutY="24.0" prefHeight="501.0" prefWidth="362.0" style="-fx-background-color: #4E342E; -fx-border-radius: 15; -fx-padding: 10 20;">
      <!-- Email TextField -->
      <TextField alignment="CENTER" layoutX="172.0" layoutY="191.0" prefHeight="38.0" prefWidth="225.0" promptText="Email address" style="-fx-background-radius: 15; -fx-background-color: #FFFFFF;">
         <font>
            <Font name="Poppins" size="12.0" />
         </font>
      </TextField>

      <!-- Password TextField -->
      <TextField alignment="CENTER" layoutX="172.0" layoutY="277.0" prefHeight="38.0" prefWidth="225.0" promptText="Password" style="-fx-background-radius: 15; -fx-background-color: #FFFFFF;">
         <font>
            <Font name="Poppins" size="12.0" />
         </font>
      </TextField>
   </AnchorPane>

   <!-- Return Button -->
   <Button id="return1" alignment="CENTER" blendMode="DARKEN" contentDisplay="CENTER" layoutX="409.0" layoutY="572.0" mnemonicParsing="false" onAction="#handleReturn" prefHeight="38.0" prefWidth="146.0" style="-fx-background-radius: 15; -fx-background-color: #4E342E; -fx-border-radius: 15; -fx-padding: 10 20; -fx-text-fill: #FFFFFF;" text="Return" textOverrun="WORD_ELLIPSIS">
      <effect>
         <Reflection />
      </effect>
      <font>
         <Font name="Poppins" size="14.0" />
      </font>
   </Button>
</AnchorPane>
